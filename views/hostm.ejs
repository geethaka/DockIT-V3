<script type="text/javascript">

  $(document).ready(function(){
      //initialize the javascript
      App.init();
 
    });


$.ajax({
    url: 'http://localhost:3000/machines',
    type: "get",
    dataType: "json",
    success: function(data, textStatus, jqXHR) {
        // since we are using jQuery, you don't need to parse response
        drawTable(data);
    }
});

function drawTable(data) {
    for (var i = 0; i < data.length; i++) {
	console.log(data[i]);
        drawRow(data[i]);
    }
}

function drawRow(rowData) {
    var row = "<tr>";
	row += "<td>" + rowData.Hostip + "</td>";
	row += "<td>" + rowData.status + "</td>";
	row += '<td>';
	row += '<button type="button" data-host="'+  rowData.Hostip  +'" class="startc btn btn-primary"';
	if(rowData.status == 'dead')	
		row += 'disabled';		
     row += '>Monitoring</button>';
	 
	
	var ips=rowData.Hostip.substring(9,12);
	console.log(ips);
			
	url='/containerdatam?ip='+ips;
	
	if(rowData.status == 'dead')	
	row +=	'<a class ="btn  btn-success.disabled" href='+url+' onclick="return false; " >Containers</a>';
	else
	row +=	'<a class ="btn btn-success" href='+url+'>Containers</a>';
	
	
	
	
   row += "</tr>";
   $("#hostdetails").append(row); 
}

$('body').on('click','.startc ', function()
{
	var ip = $(this).data('host');
	window.location = "http://localhost:3000/hostmon?ip="+ip;
	
});

$('body').on('click','.stop', function()
{
	console.log($(this).data('host'));
	var ip=$(this).data('host');
	$.get("/stop",{ip: ip}) 
	location.reload();
});

$('body').on('click','.testinfos', function()
{
	console.log($(this).data('host'));
	var ip=$(this).data('host');
	$.get("/testinfos",{ip: ip}) 
	
});


